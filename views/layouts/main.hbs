<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>

    <!-- Do not forget to change the path to the css file -->
    <link href="../../css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">

      <!-- In case of error, you should display div with class "error-container" -->
      <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if error}}
        <div class="error-container">
          <p>{{error}}</p>
        </div>
      {{/if}}

      <nav>
        <!-- Do not forget to change the path to the image -->
        <img src="../../img/logo.png" alt="logo" />

        <ul class="menu">
          <li><a href="/">Home</a></li>
          <li><a href="/all-posts">All Posts</a></li>
          <!-- Logged users -->
          {{#if user}}
            <li><a href="/create">Create Post</a></li>
            <li><a href="/my-posts">Posts of {{user.email}}</a></li>
            <li><a href="/logout">Logout</a></li>
            <!-- Guest users -->
          {{else}}
            <li><a href="/register">Register</a></li>
            <li><a href="/login">Login</a></li>
          {{/if}}
        </ul>

      </nav>
      {{{body}}}

      <footer>
        Â© Js Back-End Exam 2021
      </footer>
    </div>

  </body>

</html>